@model GemFund.Areas.Identity.Pages.Account.DonationsModel
@{ 
}


<h2>Enter a New Donation</h2>

@using (Html.BeginForm())
{}

    @Html.ValidationSummary(true)

<div class="form-group">
    <label for="Date">Date:</label>
    <input type="date" id="Date" name="Date" required>
</div>
<br />

    <div class="form-group">
        @Html.LabelFor(model => model.Amount)
        @Html.TextBoxFor(model => model.Amount, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Amount)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Anonymous)
        @Html.CheckBoxFor(model => model.Anonymous)
    </div>
   
<a class="nav-link" text-color="White" href="/Identity/Account/Homepage">
    <button type="submit" class="btn btn-primary">Submit Donation</button>
    </a>

